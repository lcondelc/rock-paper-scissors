@inherits MachineViewModel

@if (!(MachineOptions is null && MachineSelectedOption is null))
{
    <ul class="row row-cols-3 row-cols-sm-4 row-cols-lg-6 row-cols-xl-8 list-unstyled list">
      <li class="col mb-4" data-tags="cut shears" data-categories="real world">
                <a class="d-block text-dark text-decoration-none" >
                    <div class="mb-2 bg-light text-center rounded">
                        <img height="100" width="100" src="@MachineSelectedOption.Image" alt="@MachineSelectedOption.Name">
                    </div>
                    <div class="name text-muted text-decoration-none text-center pt-1">@MachineSelectedOption.Name</div>
                </a>
            </li>
    </ul>
}
