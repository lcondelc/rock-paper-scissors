@inherits PlayerViewModel

@if (PlayerOptions != null)
{
    <ul class="row row-cols-3 row-cols-sm-4 row-cols-lg-6 row-cols-xl-8 list-unstyled list">
        @foreach (var option in PlayerOptions)
        {
            <li class="col mb-4" data-tags="cut shears" data-categories="real world">
                <a class="d-block text-dark text-decoration-none" @onclick="@(e => SelectOptionClick(option.Name))">
                    <div class="mb-2 bg-light text-center rounded">
                        <img height="100" width="100" src="@option.Image" alt="@option.Name">
                    </div>
                    <div class="name text-muted text-decoration-none text-center pt-1">@option.Name</div>
                </a>
            </li>
        }

    </ul>
}
